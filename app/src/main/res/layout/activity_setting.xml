<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/txt_icontitle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:background="@null"
                android:fontFamily="@font/dmsans_bold"
                android:gravity="start|center"
                android:singleLine="true"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ic_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"

                android:src="@drawable/lifiyum_logo_fillcolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/tendpmargin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pauseauto_txt"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text='Pause Automatically'
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:gravity="center|start"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    />


              <Switch
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:checked="false"
                    android:gravity="center"
                    app:useMaterialThemeColors="false"
                     android:id="@+id/switch_pause"/>

<!--
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:useMaterialThemeColors="false"
                    android:theme="@style/SwitchCompatStyle"
                    android:checked="true" />-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp" android:background="@color/teal_700"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/voice_txt"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text='Voice Comments'
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:gravity="center|start"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    />

                <Switch
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:gravity="center"
                    android:id="@+id/switchtwo"/>


             <!--   <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:useMaterialThemeColors="false"
                    android:theme="@style/SwitchCompatStyle"
                    android:checked="true" />-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp" android:background="@color/teal_700"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/distance_txt"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text='Screen lock'
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:gravity="center|start"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    />

                <Switch
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:gravity="center"
                    android:id="@+id/switchthree"/>
              <!--  <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:useMaterialThemeColors="false"
                    android:theme="@style/SwitchCompatStyle"
                    android:checked="true" />-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp" android:background="@color/teal_700"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/lin_myactivy"
                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/my_activity"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text='My Activity'
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:gravity="center|start"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    />

                <ImageView
                    android:id="@+id/img_go"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:rotation="180"
                    android:src="@drawable/back"
                    app:tint="@color/purple_700" />

                <!--   <com.google.android.material.switchmaterial.SwitchMaterial
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       app:useMaterialThemeColors="false"
                       android:backgroundTint="@color/purple_700"
                       android:checked="true" />-->

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp" android:background="@color/teal_700"></View>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>