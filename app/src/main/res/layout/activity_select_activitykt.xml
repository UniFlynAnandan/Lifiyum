<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".basicactivitys.SelectActivity_Activitykt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_marginlay"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/text_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/dmsans_bold"
            android:text='Select Your Activity'
            android:layout_margin="@dimen/text_margin"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAlignment="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/tranparant_corners"
          android:layout_weight="1"
         >
        <ImageView
            android:id="@+id/image_walk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            android:src="@drawable/walka"
            tools:ignore="ImageContrastCheck"
            android:padding="@dimen/activity_vertical_margin"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@color/purple_700"/>
     </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        <ImageView
            android:id="@+id/image_ride"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@color/purple_700"
            android:scaleType="centerCrop"
            android:src="@drawable/ride"
            android:padding="@dimen/activity_vertical_margin"
            tools:ignore="ImageContrastCheck" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        <ImageView
            android:id="@+id/image_run"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@color/purple_700"
            android:scaleType="centerCrop"
            android:src="@drawable/run"
            android:padding="@dimen/activity_vertical_margin"
            tools:ignore="ImageContrastCheck" />
            />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>